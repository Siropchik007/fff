<Page x:Class="Zadanie.Pages.Authorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Zadanie.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Authorization">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="154*"/>
            <RowDefinition Height="123*"/>
            <RowDefinition Height="173*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Width="500">
            <TextBlock Text="Введите логин" Height="35" Width="200" FontSize="24" Margin="50 50 0 0"></TextBlock>
            <TextBox x:Name="login" Height="35" Width="200" Margin="5 50 0 0" ></TextBox>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Width="500">
            <TextBlock Text="Введите пароль" Height="35" Width="200" FontSize="24" Margin="50 50 0 0"></TextBlock>
            <TextBox x:Name="password" Height="35" Width="200" Margin="5 50 0 0" ></TextBox>
        </StackPanel>
        <StackPanel Grid.Row="2">
            <Button Content="Авторизация" Name="Auth" Width="250" Height="35" Margin="0 50 0 0" Click="Auth_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
